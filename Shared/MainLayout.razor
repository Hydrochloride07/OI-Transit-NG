@inherits LayoutComponentBase
@inject NavigationManager NavMgr

<PageTitle>DynTransit</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <input @bind="pId" />
            <button class="btn btn-primary" @onclick="GoToProblem">Go</button>
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
@code {
    int pId;
    void GoToProblem()
    {
        NavMgr.NavigateTo("/problem/view/" + pId.ToString());
    }
}